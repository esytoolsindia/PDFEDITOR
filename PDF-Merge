    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Elements
            const uploadArea = document.getElementById('uploadArea');
            const fileInput = document.getElementById('fileInput');
            const selectFilesBtn = document.getElementById('selectFilesBtn');
            const fileListContainer = document.getElementById('fileListContainer');
            const noFilesMessage = document.getElementById('noFilesMessage');
            const mergeBtn = document.getElementById('mergeBtn');
            const downloadBtn = document.getElementById('downloadBtn');
            const driveBtn = document.getElementById('driveBtn');
            const dropboxBtn = document.getElementById('dropboxBtn');
            const loading = document.getElementById('loading');
            const successMessage = document.getElementById('successMessage');
            
            // Store uploaded files
            let uploadedFiles = [];
            
            // Event Listeners
            selectFilesBtn.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', handleFileSelect);
            uploadArea.addEventListener('dragover', handleDragOver);
            uploadArea.addEventListener('dragleave', handleDragLeave);
            uploadArea.addEventListener('drop', handleDrop);
            mergeBtn.addEventListener('click', mergePDFs);
            downloadBtn.addEventListener('click', downloadMergedPDF);
            driveBtn.addEventListener('click', saveToGoogleDrive);
            dropboxBtn.addEventListener('click', saveToDropbox);
            
            // File selection handler
            function handleFileSelect(e) {
                const files = e.target.files;
                processFiles(files);
            }
            
            // Drag and drop handlers
            function handleDragOver(e) {
                e.preventDefault();
                uploadArea.classList.add('dragover');
            }
            
            function handleDragLeave(e) {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
            }
            
            function handleDrop(e) {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
                const files = e.dataTransfer.files;
                processFiles(files);
            }
            
            // Process selected files
            function processFiles(files) {
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    if (file.type === 'application/pdf') {
                        uploadedFiles.push(file);
                    }
                }
                updateFileList();
            }
            
            // Update the file list UI
            function updateFileList() {
                if (uploadedFiles.length === 0) {
                    noFilesMessage.style.display = 'block';
                    fileListContainer.innerHTML = '';
                    fileListContainer.appendChild(noFilesMessage);
                    mergeBtn.disabled = true;
                    return;
                }
                
                noFilesMessage.style.display = 'none';
                fileListContainer.innerHTML = '';
                
                uploadedFiles.forEach((file, index) => {
                    const fileItem = document.createElement('div');
                    fileItem.className = 'file-item';
                    fileItem.innerHTML = `
                        <div class="serial">${index + 1}</div>
                        <div class="file-info">
                            <div class="file-name">${file.name}</div>
                            <div class="file-size">${formatFileSize(file.size)}</div>
                        </div>
                        <div class="file-actions">
                            <button class="action-btn move-up" ${index === 0 ? 'disabled' : ''}>⬆️</button>
                            <button class="action-btn move-down" ${index === uploadedFiles.length - 1 ? 'disabled' : ''}>⬇️</button>
                            <button class="action-btn remove">❌</button>
                        </div>
                    `;
                    
                    // Add event listeners for buttons
                    const moveUpBtn = fileItem.querySelector('.move-up');
                    const moveDownBtn = fileItem.querySelector('.move-down');
                    const removeBtn = fileItem.querySelector('.remove');
                    
                    moveUpBtn.addEventListener('click', () => moveFile(index, 'up'));
                    moveDownBtn.addEventListener('click', () => moveFile(index, 'down'));
                    removeBtn.addEventListener('click', () => removeFile(index));
                    
                    fileListContainer.appendChild(fileItem);
                });
                
                mergeBtn.disabled = false;
            }
            
            // Move file up or down in the list
            function moveFile(index, direction) {
                if (direction === 'up' && index > 0) {
                    [uploadedFiles[index], uploadedFiles[index - 1]] = [uploadedFiles[index - 1], uploadedFiles[index]];
                } else if (direction === 'down' && index < uploadedFiles.length - 1) {
                    [uploadedFiles[index], uploadedFiles[index + 1]] = [uploadedFiles[index + 1], uploadedFiles[index]];
                }
                updateFileList();
            }
            
            // Remove file from the list
            function removeFile(index) {
                uploadedFiles.splice(index, 1);
                updateFileList();
            }
            
            // Format file size
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }
            
            // Merge PDFs (simulated)
            function mergePDFs() {
                if (uploadedFiles.length < 2) {
                    alert('Please select at least 2 PDF files to merge.');
                    return;
                }
                
                loading.style.display = 'block';
                successMessage.style.display = 'none';
                
                // Simulate merging process
                setTimeout(() => {
                    loading.style.display = 'none';
                    successMessage.style.display = 'block';
                    
                    // Enable download and cloud save buttons
                    downloadBtn.disabled = false;
                    driveBtn.disabled = false;
                    dropboxBtn.disabled = false;
                    
                    // Scroll to success message
                    successMessage.scrollIntoView({ behavior: 'smooth' });
                }, 2000);
            }
            
            // Download merged PDF (simulated)
            function downloadMergedPDF() {
                alert('Download functionality would be implemented with a PDF library in a real application.');
                // In a real app, this would trigger the download of the merged PDF
            }
            
            // Save to Google Drive (simulated)
            function saveToGoogleDrive() {
                alert('Google Drive integration would be implemented with their API in a real application.');
                // In a real app, this would open Google Drive authentication and upload
            }
            
            // Save to Dropbox (simulated)
            function saveToDropbox() {
                alert('Dropbox integration would be implemented with their API in a real application.');
                // In a real app, this would open Dropbox authentication and upload
            }
        });
    </script>
</body>
